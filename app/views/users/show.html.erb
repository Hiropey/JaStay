<%= render partial: "shared/side_bar" %>
<%= render partial: "shared/footer_menu" %>

<div class="main">
  <section class="main-content">

  <div class="main-profile">
    <%= @user.thumbnail_image %>
    <%= @user.name %>
    <%= @user.name %>
    <%= @user.name %>

  <div class="main__user-posts">
    <%= @user.name %>さんの投稿一覧
  </div>
  <% @posts.each do |post| %>
    <div class="main__user-posts__content">
      <div class="content__left">
        <div class="content__left--image"></div>
      </div>
      <div class="content__right">
        <div class="content__right__top">
          <%# <%= link_to post.total_rate, post_path(post.id), class: "content__right__top--title" %> %>
        </div>
        <div class="content__right__bottom">
          <div class="content__right__bottom--userName">
            <%# <%= link_to post.user.name, user_path(post.user), class: "content__right__bottom--userName--btn" %> %>
          </div>
          <div class="content__right__bottom--date">
            <%= post.created_at %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </section>
</div>